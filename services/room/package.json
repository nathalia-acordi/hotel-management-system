{
  "name": "room-service",
  "type": "module",
  "version": "1.0.0",
  "main": "src/index.mjs",
  "scripts": {
    "start": "node src/index.mjs",
    "db:indexes": "node scripts/ensure-indexes.mjs",
    "seed:sample": "node scripts/seed-room.mjs",
    "mongo:smoke": "node scripts/mongo-smoke.mjs",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config=jest.config.mjs --runInBand --detectOpenHandles",
    "test:unit": "cross-env NODE_ENV=test JEST_INTEGRATION=0 npm run test",
    "test:integration": "cross-env NODE_ENV=test JEST_INTEGRATION=1 node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config=jest.config.mjs --runInBand --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config=jest.config.mjs --watch",
    "coverage": "cross-env NODE_ENV=test node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config=jest.config.mjs --coverage"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "supertest": "^6.3.3",
    "cross-env": "^7.0.3",
    "mongodb-memory-server": "^10.2.2"
  }
}
